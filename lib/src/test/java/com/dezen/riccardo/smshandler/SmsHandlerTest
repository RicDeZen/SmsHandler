package com.dezen.riccardo.smshandler;

import org.junit.Assert;
import org.junit.Before;
import org.junit.Test;

public class SmsHandlerTest {
    SmsHandler handler;

    @Before
    public void createHandler() {
        this.handler = new SmsHandler();
    }

    @Test
    public void sendSMS_True() {
        String phoneNumber = "5554";
        String textMessage = "body";
        Assert.assertEquals(true, this.handler.sendSMS(phoneNumber, textMessage));
    }

    @Test
    public void sendSMS_FalseNumber() {
        String phoneNumber = "";
        String textMessage = "body";
        boolean result = this.handler.sendSMS(phoneNumber, textMessage);
        Assert.assertEquals(false, result);
    }

    @Test
    public void sendSMS_FalseText() {
        String phoneNumber = "3334569875";
        String textMessage = "";
        boolean result = this.handler.sendSMS(phoneNumber, textMessage);
        Assert.assertEquals(false, result);
    }
}
